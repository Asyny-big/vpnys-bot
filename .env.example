# Core
NODE_ENV=development
LOG_LEVEL=info

APP_HOST=0.0.0.0
APP_PORT=3000

# SQLite (single DB file in project root)
DATABASE_URL=file:./data.db

# Telegram
TELEGRAM_BOT_TOKEN=CHANGE_ME
TELEGRAM_BOT_URL=https://t.me/your_bot
ADMIN_USERNAME=@your_admin
ADMIN_USER_IDS=123456789,987654321

# Public URL of THIS backend (the one that serves GET /sub/<token>).
# Important: do NOT point this to 3x-ui — otherwise clients will bypass branding.
BACKEND_PUBLIC_URL=https://govchat.ru

# Public offer version (required for payments/trial/promo)
OFFER_VERSION=2026-01-24

# Must be localhost-only (backend and 3x-ui on the same host)
XUI_BASE_URL=http://127.0.0.1:2053
XUI_USERNAME=admin
XUI_PASSWORD=CHANGE_ME
XUI_INBOUND_ID=1
XUI_CLIENT_FLOW=xtls-rprx-vision

# Protect all webhook endpoints
WEBHOOK_TOKEN=CHANGE_ME

# Worker
WORKER_INTERVAL_SECONDS=300

# Pricing (RUB, integers)
PLAN_30_RUB=199
PLAN_90_RUB=499
PLAN_180_RUB=899

# YooKassa (optional)
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=
PAYMENTS_RETURN_URL=https://t.me/your_bot

# CryptoBot / Crypto Pay API (optional)
CRYPTOBOT_API_TOKEN=
CRYPTOBOT_ASSET=USDT
# Conversion: RUB per 1 USDT (e.g. 100 means 100 ₽ ≈ 1 USDT)
RUB_TO_USDT_RATE=100
# Optional overrides for crypto pricing in RUB (leave empty to reuse PLAN_*_RUB)
CRYPTOBOT_PLAN_30_RUB=
CRYPTOBOT_PLAN_90_RUB=
CRYPTOBOT_PLAN_180_RUB=
CRYPTOBOT_DEVICE_SLOT_RUB=
