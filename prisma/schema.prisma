generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(cuid())
  telegramId     String        @unique
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  trialGrantedAt DateTime?

  subscription   Subscription?
  payments       Payment[]
  promoUses      PromoCodeUse[]
}

model Subscription {
  id                String             @id @default(cuid())
  userId            String             @unique
  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  // 3x-ui identity: source of truth for the VPN account.
  xuiInboundId       Int
  xuiClientUuid      String             @unique
  xuiSubscriptionId  String             @unique

  // Cached mirror of 3x-ui fields (expiration is still the source of truth in 3x-ui).
  // SQLite: store as string (no Prisma enum support in this project).
  status            String              @default("ACTIVE")
  // Source of truth for per-user device limit (mirrored to 3x-ui client.limitIp).
  deviceLimit       Int                 @default(1)
  expiresAt         DateTime?
  // Source of truth for "paid until" including promo extensions.
  paidUntil         DateTime?
  enabled           Boolean             @default(true)
  lastSyncedAt      DateTime?

  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  @@index([expiresAt])
  @@index([paidUntil])
  @@index([status])
}

model Payment {
  id                 String          @id @default(cuid())
  userId             String
  user               User            @relation(fields: [userId], references: [id], onDelete: Restrict)

  // SQLite: store as string (no Prisma enum support in this project).
  provider           String
  providerPaymentId  String
  // SQLite: store as string (no Prisma enum support in this project).
  status             String          @default("PENDING")

  // Payment type (no Prisma enum support in this project).
  // "SUBSCRIPTION" -> extend by planDays
  // "DEVICE_SLOT"  -> add deviceSlots
  type              String          @default("SUBSCRIPTION")

  planDays           Int
  deviceSlots        Int             @default(0)
  amountMinor        Int
  currency           String

  createdAt          DateTime        @default(now())
  paidAt             DateTime?
  processingAt       DateTime?
  appliedAt          DateTime?

  // Idempotency helpers: store computed targets so retries are safe.
  targetExpiresAt    DateTime?
  targetDeviceLimit  Int?

  // SQLite: store JSON as string (no Prisma Json support in this project).
  rawWebhook         String?

  @@unique([provider, providerPaymentId])
  @@index([userId, createdAt])
}

model PromoCode {
  id        String   @id @default(cuid())
  code      String   @unique
  bonusDays Int
  maxUses   Int?
  usedCount Int      @default(0)
  expiresAt DateTime?
  createdAt DateTime @default(now())

  uses      PromoCodeUse[]
}

model PromoCodeUse {
  id      String    @id @default(cuid())
  promoId String
  userId  String
  usedAt  DateTime  @default(now())

  promo   PromoCode @relation(fields: [promoId], references: [id], onDelete: Cascade)
  user    User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([promoId, userId])
  @@index([userId, usedAt])
}
